# JSON web token (JWT) secret: this keeps our app's user authentication secure
# This secret should be a random 20-ish character string
JWT_ACCESS_TOKEN_SECRET='access-token'
JWT_REFRESH_TOKEN_SECRET='refresh-token'
JWT_ACCESS_TOKEN_LIFE='1h'
JWT_REFRESH_TOKEN_LIFE='2h'

# Mongo DB
MONGO_HOST='localhost'
MONGO_PORT=27017
MONGO_USERNAME='user'
MONGO_PASSWORD='password'
MONGO_DATABASE='api'
MONGO_INITDB_DATABASE='admin'
MONGO_INITDB_ROOT_USERNAME='admin-user'
MONGO_INITDB_ROOT_PASSWORD='admin-password'

# Mogoku
MONGOKU_PORT=3100

# API
API_VERSION='v1.0'

# App
APP_NAME='node-restful-api'
APP_PORT=3000

# Debug
LOG_LEVEL='debug'
LOG_PATH='logs/api.log'
LOG_ENABLE_CONSOLE=true

# Agenda
AGENDA_DATABASE='agenda'

# Pagination
PAGINATION_DEFAULT_LIMIT=100

# Request Logger
REQUEST_LOGGER_ENABLE=true
REQUEST_LOGGER_RETURN_ID_ENABLE=true

# Email SMTP Server
EMAIL_HOST='address'
EMAIL_HOST_USER='user'
EMAIL_HOST_PASSWORD='password'
EMAIL_PORT=587

# Email Addresses
EMAIL_ADDRESS_NO_REPLY='no-reply@example.com'

# Front End
FRONTEND_ADDRESS='http://localhost:3000'
FRONTEND_EMAIL_VERIFICATION_PATH='/email-verification'
FRONTEND_LOGO_URL='http://localhost:3000/images/logo.png'

# Account activation email timeout.
# 3 days, in seconds
PASSWORD_ACTIVATION_TIMEOUT=259200
